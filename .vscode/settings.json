{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.fontSize": 13,
  "terminal.integrated.fontSize": 14,
  "[Log]": {
    "editor.fontSize": 15
  },
  "files.exclude": {
    "node_modules": true,
    ".git": true,
    "dist": true,
    "**/*.css.map": true
  },
  "search.exclude": {
    "node_modules": true,
    ".git": true
  },
  "beautify.onSave": true,
  "editor.formatOnSave": true,
  "beautify.JSfiles": ["js", "json", "jsx"],
  "prettier.semi": false
}
